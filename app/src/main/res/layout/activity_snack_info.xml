<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp"
    tools:context=".Snack_Info">

    <TextView
        android:id="@+id/info_snack_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:fontFamily="@font/my_font_family"
        android:textSize="15dp">
    </TextView>

    <TextView
        android:id="@+id/info_snack_taste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:fontFamily="@font/my_font_family"
        android:textSize="15dp">
    </TextView>

    <TextView
        android:id="@+id/info_snack_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:fontFamily="@font/my_font_family"
        android:textSize="15dp">
    </TextView>

    <Button
        android:layout_margin="2dp"
        android:id="@+id/button_write_review"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:text="Write Review"
        android:fontFamily="@font/my_font_family"
        android:textSize="15dp"/>

    <Button
        android:layout_margin="2dp"
        android:id="@+id/button_info_back"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:text="Back"
        android:fontFamily="@font/my_font_family"
        android:textSize="15dp"/>


</LinearLayout>