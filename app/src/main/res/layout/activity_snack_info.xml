<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:fontFamily="@font/my_font_family"
    tools:context=".Snack_Info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageButton1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@android:drawable/ic_search_category_default"/>

            <ImageView
                android:id="@+id/imageButton2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@android:drawable/ic_menu_share"/>

            <ImageView
                android:id="@+id/imageButton3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@android:drawable/star_big_off"/>

            <ImageView
                android:id="@+id/imageButton4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@android:drawable/ic_menu_manage"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:color/holo_orange_dark" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:srcCompat="@android:color/white"/>

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="2">
    </LinearLayout>

    <ImageView
        android:id="@+id/info_snack_image"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_weight="35"
        android:src="@drawable/cookies" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/info_snack_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="@font/my_font_family"
            android:textSize="20dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:fontFamily="@font/my_font_family"
                    android:textSize="18dp"
                    android:text="TASTE : ">
                </TextView>

                <TextView
                    android:id="@+id/info_snack_taste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:fontFamily="@font/my_font_family"
                    android:textSize="18dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:fontFamily="@font/my_font_family"
                    android:textSize="18dp"
                    android:text=" / 5">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:fontFamily="@font/my_font_family"
                    android:textSize="18dp"
                    android:text="COST : ">
                </TextView>

                <TextView
                    android:id="@+id/info_snack_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:fontFamily="@font/my_font_family"
                    android:textSize="18dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:fontFamily="@font/my_font_family"
                    android:textSize="18dp"
                    android:text=" / 5">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/Text_first_keyword"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="@font/my_font_family"
                android:textSize="18dp"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:id="@+id/Text_second_keyword"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="@font/my_font_family"
                android:textSize="18dp"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:id="@+id/Text_third_keyword"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="@font/my_font_family"
                android:textSize="18dp"
                android:textAlignment="center">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center">

            <ProgressBar
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/progress_key1"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_weight="80">
            </ProgressBar>

            <ProgressBar
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/progress_key2"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_weight="80">
            </ProgressBar>

            <ProgressBar
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/progress_key3"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_weight="80">
            </ProgressBar>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">
    </LinearLayout>

    <TextView
        android:id="@+id/Text_participation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:fontFamily="@font/my_font_family"
        android:textSize="15dp"
        android:text=" people participated!">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15">
    </LinearLayout>

    <Button
        android:layout_margin="2dp"
        android:id="@+id/button_write_review"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Write Review"
        android:fontFamily="@font/my_font_family"
        android:textSize="15dp"/>

</LinearLayout>