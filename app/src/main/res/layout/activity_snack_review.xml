<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:fontFamily="@font/my_font_family"
    tools:context=".Snack_Review">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageButton1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@android:drawable/ic_search_category_default"/>

            <ImageView
                android:id="@+id/imageButton2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@android:drawable/ic_menu_share"/>

            <ImageView
                android:id="@+id/imageButton3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@android:drawable/star_big_off"/>

            <ImageView
                android:id="@+id/imageButton4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@android:drawable/ic_menu_manage"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:color/holo_orange_dark" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:srcCompat="@android:color/white"/>

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="2">
    </LinearLayout>

    <ImageView
        android:id="@+id/review_snack_image"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_weight="35"
        android:src="@drawable/cookies" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/review_snack_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="@font/my_font_family"
            android:textSize="20dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taste Rating"
                android:id="@+id/review_taste_name"
                android:fontFamily="@font/my_font_family"
                android:textSize="24dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/button_taste1"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/basic_star">
            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/button_taste2"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/basic_star">
            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/button_taste3"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/basic_star">
            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/button_taste4"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/basic_star">
            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/button_taste5"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/basic_star">
            </ImageButton>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1">

            </ImageView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost Rating"
                android:id="@+id/review_cost_name"
                android:fontFamily="@font/my_font_family"
                android:textSize="24dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/button_cost1"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/basic_star">
            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/button_cost2"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/basic_star">
            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/button_cost3"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/basic_star">
            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/button_cost4"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/basic_star">
            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/button_cost5"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/basic_star">
            </ImageButton>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1">

            </ImageView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <CheckBox
            android:id="@+id/checkbox_review_key1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/my_font_family"
            android:text="Sweet"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkbox_review_key2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/my_font_family"
            android:text="Spicy"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkbox_review_key3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/my_font_family"
            android:text="Bland"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkbox_review_key4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/my_font_family"
            android:text="Nutty"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <CheckBox
            android:id="@+id/checkbox_review_key5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/my_font_family"
            android:text="Salty"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkbox_review_key6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/my_font_family"
            android:text="Greasy"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkbox_review_key7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/my_font_family"
            android:text="Crispy"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkbox_review_key8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/my_font_family"
            android:text="Moisturized"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15">
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Review"
        android:id="@+id/button_upload_review"
        android:fontFamily="@font/my_font_family"
        android:textSize="25dp"
        android:layout_gravity="center"/>

</LinearLayout>